type Account {
  id: ID! @unique
  email: String! @unique
  password: String!
  rememberMe: Boolean! @default(value: false)
  accountState: State @default(value: ACTIVE)
  country: String
  roles: [Role!]!
  profileId: ID @unique
}

type Role {
  id: ID! @unique
  role: Roles @default(value: REGULAR)
  desc: String
}

type AuthPayload {
  token: String
  refreshToken: String
  account: Account
}


enum State {
  ACTIVE 
  INACTIVE
  DISABLED
  FLAGGED
  BANNED
}

enum Roles {
  REGULAR
  PREMIUM
  ADMIN
}
